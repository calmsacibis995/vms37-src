REQUIRE 'SRC$:SOSREQ.B16';

EXROUTINE
	COPPGW,		! LAST PAG NUMBER WRITTEN
	DELLINE;	! DELETE LINE FROM BUFFER


GBLNVROUTINE (COPYXY(ADR))=
BEGIN
LOCAL
    LNO: VECTOR[2];
SOSFLG=.SOSFLG AND NOT RONLY;
BUFPGW=.COPPGW;
LNO[0]=.LINPAG(.ADR);
LNO[1]=.LINLIN(.ADR);
UNTIL LEQL(BUFPG1,LNO) DO
	DELLINE(.BUFFIR);

END;

