	$STRUCT	SCR

	C	<		; SCREEN PACKAGE REQUEST TYPES
		PUT_SCREEN	; SCR$PUT_SCREEN
		GET_SCREEN	; SCR$GET_SCREEN
		ERASE_PAGE	; SCR$ERASE_PAGE
		ERASE_LINE	; SCR$ERASE_LINE
		SET_CURSOR	; SCR$SET_CURSOR
		DOWN_SCROLL	; SCR$DOWN_SCROLL
		SCREEN_INFO	; SCR$SCREEN_INFO
		PUT_LINE	; SCR$PUT_LINE
		MOVE_CURSOR	; SCR$MOVE_CURSOR
		SET_SCROLL	; SCR$SET_SCROLL
		UP_SCROLL	; SCR$UP_SCROLL
		>
;
;	DEFINE BIT MASKS AND VALUES FOR SCREEN ATTRIBUTES
;
	V	<M
		BOLD
		REVERSE
		BLINK
		UNDERLINE
		>
;
;	DEFINE FORMAT OF SCR$SCREEN_INFO RETURN BUFFER
;

	F	FLAGS,L		; FLAGS LONGWORD
	V	<M
		SCREEN		; 1 = SCREEN ORIENTED, 0 = SCROLLING
		ANSICRT		; ANSI TERMINAL
		REGIS		; REGIS TERMINAL
		BLOCK		; BLOCK MODE TERMINAL
		AVO		; ADVANCED VIDEO TERMINAL
		EDIT		; TERMINAL HAS EDIT CAPABILITY
		DECCRT		; TERMINAL IS A DEC CRT
		>
	F	WIDTH,W		; WIDTH OF EACH LINE
	F	PAGESIZE,W	; LINES IN SCREEN
	F	DEVTYPE,B	; DEVICE TYPE (SEE $DCDEF)
	F	,B,11		; (RESERVED)
	L	LENGTH		; LENGTH OF INFO RETURN BUFFER

	E
